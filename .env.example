# Linera Blockchain Configuration
# For local development (default)
NEXT_PUBLIC_LINERA_ENDPOINT=http://localhost:8080
NEXT_PUBLIC_CHAIN_ID=
NEXT_PUBLIC_APP_ID=

# For Testnet Conway deployment:
# NEXT_PUBLIC_LINERA_ENDPOINT=https://testnet.linera.io
# NEXT_PUBLIC_CHAIN_ID=<your_testnet_chain_id>
# NEXT_PUBLIC_APP_ID=<your_testnet_app_id>

# Wallet Configuration
# Set to 'false' for real blockchain connection (testnet/mainnet)
# Set to 'true' for local development without wallet
NEXT_PUBLIC_WALLET_MOCK=true
NEXT_PUBLIC_ENABLE_BLOCKCHAIN=true

# Development
NODE_ENV=development
